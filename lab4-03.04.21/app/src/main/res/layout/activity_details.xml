<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatImageView
            android:background="@drawable/background"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/appCompatImageView"/>

    <ImageView
            tools:src="@tools:sample/avatars"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:layout_constraintTop_toBottomOf="@+id/appCompatImageView"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:id="@+id/logoView"/>

    <TextView
            tools:text="@tools:sample/first_names"
            android:textSize="24sp"
            android:textColor="@color/colorAccent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="64dp"
            app:layout_constraintTop_toBottomOf="@+id/appCompatImageView"
            app:layout_constraintStart_toEndOf="@+id/logoView"
            android:id="@+id/versionNameTV"/>

    <TextView
            android:paddingEnd="10dp"
            android:textStyle="bold"
            android:text="@string/release_lbl"
            android:layout_marginStart="64dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/versionNameTV"
            app:layout_constraintStart_toEndOf="@+id/logoView"
            android:id="@+id/textView2"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/versionNameTV"
            android:id="@+id/releaseDateLbl"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/trailer_btn"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/releaseDateLbl"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/logoView"/>

    <TextView
            android:layout_margin="16dp"
            android:textStyle="bold"
            android:text="@string/overview_lbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/logoView"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/textView5"/>

    <ScrollView
            android:layout_marginHorizontal="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/textView5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

        <TextView
                tools:text="@tools:sample/lorem/random"
                android:id="@+id/overviewTv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintTop_toBottomOf="@+id/textView5"
                app:layout_constraintStart_toStartOf="parent"/>

    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>